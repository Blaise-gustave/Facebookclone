<p>
  <strong>Image:</strong>
  <%if @post.image.present?%>
    <%= image_tag @post.image.url %>
  <%else%>
  <%end%>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.first_name %>
</p>

  <%if @post.user.first_name == current_user.first_name%>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
  <%else%>
    <%= link_to 'Back', posts_path %>
  <%end%>

